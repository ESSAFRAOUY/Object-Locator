<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:fontFamily="sans-serif-black"
            android:text="Write the Id of the object you want to delete:" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:inputType="number"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete object"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView_titre3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pink_2"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:text="Objects list"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textCursorDrawable="@color/cardview_dark_background"
            android:textSize="25dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listObjects1"
                android:layout_width="match_parent"
                android:layout_height="375dp" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


    </LinearLayout>

</FrameLayout>